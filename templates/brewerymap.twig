{% extends "base.twig" %}

{% block title %}Michigan Brewery Map{% endblock %}

{% block content %}
	<div id="map"></div>
{% endblock %}

{% block favicon %}
	<link rel='shortcut icon' type='image/png' href='/favicon/beer.png' />
{% endblock %}

{% block stylesheets %}
	<link rel='stylesheet' type='text/css' media='screen' href='css/brewerymap.css' />
{% endblock %}

{% block javascript %}
	<script type="application/json" id="brewery-data">
		{{ all | json_encode() | raw }}
	</script>
	<script src="/js/brewerymap.js"></script>
	<script async defer
		src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBHZpik_BwNvLcZt_AeKPYwKXAmv3jbczA&callback=initMap">
	</script>
{% endblock %}
